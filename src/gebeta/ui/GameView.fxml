<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<StackPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gebeta.ui.UIController">
     <!-- MAIN GAME VIEW -->
    <BorderPane fx:id="gameRoot">
        <!-- ================= TOP BAR ================= -->
        <top>
            <HBox spacing="20" alignment="CENTER" padding="10">
                <Label fx:id="turnLabel" text="Turn: Player" />
                <Button text="Save" onAction="#onSaveGame"/>
                <Button text="Pause"/>
                <Button text="Exit"/>
            </HBox>
        </top>

        <!-- ================= GAME BOARD ================= -->
        <center>
            <GridPane fx:id="boardGrid"
                    hgap="10"
                    vgap="10"
                    alignment="CENTER"
                    padding="20">

                <!-- Player 2 pits (top row) -->
                <Button fx:id="pit12" text="4" onAction="#onPitClicked" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Button fx:id="pit11" text="4" onAction="#onPitClicked" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                <Button fx:id="pit10" text="4" onAction="#onPitClicked" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
                <Button fx:id="pit9"  text="4" onAction="#onPitClicked" GridPane.rowIndex="0" GridPane.columnIndex="4"/>
                <Button fx:id="pit8"  text="4" onAction="#onPitClicked" GridPane.rowIndex="0" GridPane.columnIndex="5"/>
                <Button fx:id="pit7"  text="4" onAction="#onPitClicked" GridPane.rowIndex="0" GridPane.columnIndex="6"/>

                <!-- Player 2 store -->
                <Button fx:id="pit13" text="0" disable="true"
                        GridPane.rowIndex="0" GridPane.columnIndex="7"
                        GridPane.rowSpan="2"/>

                <!-- Player 1 store -->
                <Button fx:id="pit6" text="0" disable="true"
                        GridPane.rowIndex="1" GridPane.columnIndex="0"
                        GridPane.rowSpan="2"/>

                <!-- Player 1 pits (bottom row) -->
                <Button fx:id="pit0" text="4" onAction="#onPitClicked" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                <Button fx:id="pit1" text="4" onAction="#onPitClicked" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                <Button fx:id="pit2" text="4" onAction="#onPitClicked" GridPane.rowIndex="2" GridPane.columnIndex="3"/>
                <Button fx:id="pit3" text="4" onAction="#onPitClicked" GridPane.rowIndex="2" GridPane.columnIndex="4"/>
                <Button fx:id="pit4" text="4" onAction="#onPitClicked" GridPane.rowIndex="2" GridPane.columnIndex="5"/>
                <Button fx:id="pit5" text="4" onAction="#onPitClicked" GridPane.rowIndex="2" GridPane.columnIndex="6"/>

            </GridPane>
        </center>

        <!-- ================= BOTTOM MESSAGE ================= -->
        <bottom>
            <Label fx:id="messageLabel"
                text=""
                alignment="CENTER"
                padding="10"/>
        </bottom>

    </BorderPane>
    <!-- PAUSE OVERLAY (loaded dynamically) -->
    <StackPane fx:id="pauseOverlay" visible="false"/>
    <StackPane fx:id="winnerOverlay" visible="false">

</StackPane>
