<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="gebeta.ui.UIController"
           style="-fx-background-color: rgba(0,0,0,0.6);">

    <VBox spacing="15"
          alignment="CENTER"
          style="-fx-background-color: white; -fx-padding: 20; -fx-border-radius: 10;">

        <Label text="Game Paused" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <Button text="Resume" onAction="#onResumeGame"/>
        <Button text="Save Game" onAction="#onSaveGame"/>
        <Button text="Settings"/>
        <Button text="Exit" onAction="#onExitGame"/>

    </VBox>

</StackPane>
